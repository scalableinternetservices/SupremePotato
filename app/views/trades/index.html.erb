<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Buy Order ID</th>
      <th>Sell Order ID</th>
      <th>Company</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.buy_order_id %></td>
        <td><%= trade.sell_order_id %></td>
        <td><%= trade.company.name %></td>
        <td><%= trade.price %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
