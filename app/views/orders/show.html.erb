<p id="notice"><%= notice %></p>

<p>
  <strong>Order Type:</strong>
  <%= @order.order_type == Order::BUY ? 'BUY' : 'SELL'  %>
</p>

<p>
  <strong>Price:</strong>
  $<%= number_to_currency(@order.price, delimiter: '', unit: '') %>
</p>

<p>
  <strong>Company:</strong>
  <%= @order.company.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user.name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @order.status == Order::PENDING ? 'PENDING' : 'COMPLETED' %>
</p>

<%= link_to 'Back', orders_path %>
