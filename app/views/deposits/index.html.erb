<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Balance:</strong>
  <td>$<%= number_to_currency(@user.balance, delimiter: '', unit: '') %></td>
</p>

<%= link_to 'New Deposit/Withdrawal', new_user_deposit_path(params[:user_id]) %>

<br><br>
<h2>Banking History</h2>

<table>
  <thead>
    <tr>
      <th>Transaction Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td>$<%= number_to_currency(deposit.amount, delimiter: '', unit: '') %></td>
        <td><%= deposit.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
<%= will_paginate @deposits %>
