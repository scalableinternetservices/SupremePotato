<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Balance:</strong>
  <%= @user.balance %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<br><br>
<h2>Portfolio</h2>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Company</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.id %></td>
        <td><%= holding.company %></td>
        <td><%= holding.quantity %></td>
        <td><%= holding.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
