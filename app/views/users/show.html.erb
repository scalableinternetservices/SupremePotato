<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Balance:</strong>
  $<%= @user.balance %>.00
</p>

<br><br>
<h3>Total Portfolio Worth</h3>

<h3>Stocks</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Shares</th>
      <th>Current Price</th>
      <th>Average Cost</th>
      <th>Total Return</th>
      <th>Equity</th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.company.name %></td>
        <td><%= holding.company.ticker %></td>
        <td><%= holding.quantity %></td>
        <td><%= holding.company.price %></td>
        <td>$0.00</td>
        <td>$0.00</td>
        <td>$<%= holding.quantity * holding.company.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>

